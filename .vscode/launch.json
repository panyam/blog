{
    "version": "0.2.0",
    "configurations": [
      {
          "name": "Launch file",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "main.go",
          "cwd": "${workspaceFolder}",
          "dlvFlags": ["--check-go-version=false"],
          "justMyCode":false
      }
        ,
       {
            "name": "Remote Debugger for Blog",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 9091,
            "showLog": true,
            "host": "127.0.0.1"
      }
    ]
  }
  
